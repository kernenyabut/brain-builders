@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<header class="py-5"></header>

<section>
    <div class="container">
        <div>
            <h1>Manage your account</h1>
            <h4>Change your account settings</h4>
            <hr />
            <div class="row">
                <div class="col-md-3">
                    <partial name="_ManageNav" />
                </div>
                <div class="col-md-9">
                    <div class="text-danger" id="debugMessage">@TempData["Message"]</div>
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @RenderSection("Scripts", required: false)
}
