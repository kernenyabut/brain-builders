@model BrainBuilder.Controllers.GamesController.InputModel
@{
    ViewData["Title"] = "Matching";
}

<header class="py-5"></header>
<section>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <div class="col align-items-center ">

            <div class="row align-items-center">
                <section class="scoreDisplay align-items-center">
                    <form id="frmSubmit" asp-action="Submit_Matching">
                        <label>Moves:</label>
                        <input type="text" asp-for="MovesTaken" id="gameMoves" readonly />
                        <label>Score:</label>
                        <input type="text" asp-for="FinalScore" id="gameScore" readonly />
                        <label>Time (Seconds):</label>
                        <input type="text" asp-for="TimeTaken" id="gameTime" readonly />
                    </form>
                </section>
            </div>
            <div class="row">
                <section class="memoryControl align-items-center">
                    <button id="btnStart"  class="btn btn-style-1 btn-secondary" onclick="startGame()">Start Game</button>
                    <button id="btnReset" class="btn btn-style-1 btn-danger" onClick="window.location.reload();">Reset</button>
                    <input id="btnSubmit" class="btn btn-style-1 btn-primary" type="submit" value="Submit" form="frmSubmit" disabled="disabled" />
                </section>
            </div>
            <div class="row align-items-center">
                <section class="memoryGame">
                    <div class="memoryCard" data-framework="tenOfSpades">
                        <img class="cardFront" src="~/img/card01.png" alt="Ten of Spades" />
                        <img class="cardBack" src="~/img/cardBack.png" alt="Card Back" />
                    </div>
                    <div class="memoryCard" data-framework="tenOfSpades">
                        <img class="cardFront" src="~/img/card01.png" alt="Ten of Spades" />
                        <img class="cardBack" src="~/img/cardBack.png" alt="Card Back" />
                    </div>
                    <div class="memoryCard" data-framework="queenOfSpades">
                        <img class="cardFront" src="~/img/card02.png" alt="Queen of Spades" />
                        <img class="cardBack" src="~/img/cardBack.png" alt="Card Back" />
                    </div>
                    <div class="memoryCard" data-framework="queenOfSpades">
                        <img class="cardFront" src="~/img/card02.png" alt="Queen of Spades" />
                        <img class="cardBack" src="~/img/cardBack.png" alt="Card Back" />
                    </div>
                    <div class="memoryCard" data-framework="fourOfDiamonds">
                        <img class="cardFront" src="~/img/card03.png" alt="Four of Diamonds" />
                        <img class="cardBack" src="~/img/cardBack.png" alt="Card Back" />
                    </div>
                    <div class="memoryCard" data-framework="fourOfDiamonds">
                        <img class="cardFront" src="~/img/card03.png" alt="Four of Diamonds" />
                        <img class="cardBack" src="~/img/cardBack.png" alt="Card Back" />
                    </div>
                    <div class="memoryCard" data-framework="aceOfHearts">
                        <img class="cardFront" src="~/img/card04.png" alt="Ace of Hearts" />
                        <img class="cardBack" src="~/img/cardBack.png" alt="Card Back" />
                    </div>
                    <div class="memoryCard" data-framework="aceOfHearts">
                        <img class="cardFront" src="~/img/card04.png" alt="Ace of Hearts" />
                        <img class="cardBack" src="~/img/cardBack.png" alt="Card Back" />
                    </div>
                    <div class="memoryCard" data-framework="sevenOfHearts">
                        <img class="cardFront" src="~/img/card05.png" alt="Seven of Hearts" />
                        <img class="cardBack" src="~/img/cardBack.png" alt="Card Back" />
                    </div>
                    <div class="memoryCard" data-framework="sevenOfHearts">
                        <img class="cardFront" src="~/img/card05.png" alt="Seven of Hearts" />
                        <img class="cardBack" src="~/img/cardBack.png" alt="Card Back" />
                    </div>
                    <div class="memoryCard" data-framework="blackJoker">
                        <img class="cardFront" src="~/img/card06.png" alt="Black Joker" />
                        <img class="cardBack" src="~/img/cardBack.png" alt="Card Back" />
                    </div>
                    <div class="memoryCard" data-framework="blackJoker">
                        <img class="cardFront" src="~/img/card06.png" alt="Black Joker" />
                        <img class="cardBack" src="~/img/cardBack.png" alt="Card Back" />
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript" src="~/js/memGame.js"></script>

